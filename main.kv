#:import WipeTransition kivy.uix.screenmanager.WipeTransition


ScreenManagement:
    transition: WipeTransition()
    id: screen_manager
    WelcomeScreen:
        id: welcome_screen
        name: 'WelcomeScreen'
        manager: screen_manager
    LoginScreen:
        id: login_screen
        name: 'LoginScreen'
        manager: screen_manager
    MenuScreen:
        id: menu_screen
        name: 'MenuScreen'
        manager: screen_manager
    SingleplayerGameScreen:
        id: singleplayer_screen
        name: 'SingleplayerGameScreen'
        manager: screen_manager

<WelcomeScreen>:
    name: 'welcome_screen'
    BoxLayout:
        id: welcome_layout
        orientation: 'vertical'
        padding: 30

        Label:
            text: "*** GUI Hangman ALPHA version ***"
            font_size: 40
        BoxLayout:
            orientation: 'horizontal'
            Button:
                font_size: 50
                text: "Login as user"
                on_release: app.root.current = 'LoginScreen'
            Button:
                font_size: 50
                text: "Play as guest"




<LoginScreen>:
    name: 'login_screen'
    login_username_text_input: username
    login_password_text_input: password


    BoxLayout:
        orientation: "vertical"
        GridLayout:

            rows: 2
            cols: 2
            padding: 10
            spacing: 10
            Label:
                text: "User name:"
            TextInput:
                id: username
            Label:
                text: "Password:"
            TextInput:
                id: password
        Button:
            text: "Enter!"
            on_release: root.login_func()


<MenuScreen>:
    name: 'menu_screen'

    BoxLayout:
        orientation: "vertical"
        Button:
            id: menu_option1
            font_size: 25
            on_release: app.root.current = 'SingleplayerGameScreen'
        Button:
            font_size: 25
            text: "Enter the options submenu"
        Button:
            font_size: 25
            text: "Host a multiplayer session (BETA!)"
        Button:
            font_size: 25
            text: "Join a multiplayer session (ALPHA!)"


<SingleplayerGameScreen>:
    name: 'singleplayer_screen'
    guess_input: gu_input
    word_output: word_display
    gu_left_output: gu_left
    error_msg_output: msg_box

    BoxLayout:
        orientation: "vertical"
        padding: 30
        spacing: 20
        Label:
            id: word_display
            text:
            font_size: 80
        Label:
            id: gu_left
            text:
            font_size: 50
        TextInput:
            id: gu_input
        Button:
            text: "Submit!"
            id: submit_gu
            on_press: root.run_game(gu_input)
        Label:
            id: guess_status
        Label:
            id: msg_box
            text:


